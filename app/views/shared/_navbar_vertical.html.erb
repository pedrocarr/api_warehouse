<div class="scrollable-x">
  <ul class="nav flex-column">
    <% @requests.each do |request| %>
      <% if request.response.present? %>
        <div class="container mb-2">
          <span class="nav-item">
            <%= request.url %>
          </span>
          <div class="container-fluid">
            <div class="row">
              <div class="col-auto">
                <%= button_to "Show", request_path(request), class: 'btn btn-outline-dark btn-sm', method: :get %>
              </div>
              <div class="col">
                <%= button_to "Delete", request_path(request), method: :delete, data: { turbo_confirm: "Are you sure?"}, class: 'btn btn-outline-danger btn-sm' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>
